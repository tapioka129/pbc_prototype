  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Reason</th>
      <th>Summary</th>
      <th>Summary2</th>
      <th>Detail</th>
    </tr>
  </thead>
<!-- experiment-->
  <tbody>
    <% @experiments.each do |experiment| %>
      <tr>
        <td><%= experiment.date %></td>
        <td>Experiment</td>
        <td><%= experiment.title %></td>
        <td><%= experiment.purpose %></td>
        <td><%= experiment.summary_result %></td>
        <td><%= link_to "詳細", experiment_path(experiment.id) %></td>
      </tr>
    <% end %>
    
    <!-- designs-->
        <% @designs.each do |design| %>
      <tr>
        <td><%= design.date %></td>
        <td>Design </td>
        <td>NA</td>
        <td><%= design.summary %></td>
        <td>NA</td>
        <td><%= link_to "詳細", design_path(design.id) %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

